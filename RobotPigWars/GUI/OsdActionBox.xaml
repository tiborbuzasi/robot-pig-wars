<UserControl x:Class="RobotPigWars.GUI.OsdActionBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RobotPigWars.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="265">
    <Grid>
        <Canvas x:Name="Canvas"  Grid.Column="1" Grid.Row="1" />
        <Label Content="Steps" Grid.Column="1" Grid.Row="1" Style="{StaticResource OsdInfoBoxTitle}" />
        <Rectangle x:Name="Border" Grid.Column="1" Grid.Row="1" Style="{StaticResource OsdInfoBox}" />
    </Grid>
</UserControl>
